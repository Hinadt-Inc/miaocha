{
  "name": "miaocha - Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "23.9.0",
      "installYarn": "false",
      "installPnpm": "false"
    }
  },
  "postCreateCommand": "bash .devcontainer/scripts/setup-java.sh && bash .devcontainer/scripts/setup-pm.sh && bash .devcontainer/scripts/pull-images.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "java.jdt.ls.java.home": "/usr/lib/jvm/temurin-17-jdk-amd64",
        "java.configuration.runtimes": [
          { "name": "JavaSE-17", "path": "/usr/lib/jvm/temurin-17-jdk-amd64" }
        ],
        "java.import.gradle.java.home": "/usr/lib/jvm/temurin-17-jdk-amd64",
        "maven.executable.path": "/usr/local/bin/mvn"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "visualstudioexptteam.vscodeintellicode",
        "vscjava.vscode-maven",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.vscode-github-actions"
      ]
    }
  },
  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/temurin-17-jdk-amd64",
    "MAVEN_HOME": "/opt/maven",
    "PATH": "/opt/maven/bin:${containerEnv:PATH}"
  },
  "remoteUser": "vscode"
}
