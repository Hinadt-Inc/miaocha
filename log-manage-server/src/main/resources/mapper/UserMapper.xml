<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hina.log.mapper.UserMapper">
    
    <!-- 根据ID查询用户 -->
    <select id="selectById" resultType="com.hina.log.entity.User">
        SELECT * FROM user WHERE id=#{id}
    </select>
    
    <!-- 根据UID查询用户 -->
    <select id="selectByUid" resultType="com.hina.log.entity.User">
        SELECT * FROM user WHERE uid=#{uid}
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultType="com.hina.log.entity.User">
        SELECT * FROM user WHERE email=#{email}
    </select>
    
    <!-- 查询所有用户 -->
    <select id="selectAll" resultType="com.hina.log.entity.User">
        SELECT * FROM user
    </select>
    
    <!-- 根据角色查询用户 -->
    <select id="selectByRole" resultType="com.hina.log.entity.User">
        SELECT * FROM user WHERE role=#{role}
    </select>
    
    <!-- 根据ID列表批量查询用户 -->
    <select id="selectByIds" resultType="com.hina.log.entity.User">
        SELECT * FROM user WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 插入用户 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (nickname, email, uid, password, role, status, create_time, update_time)
        VALUES (#{nickname}, #{email}, #{uid}, #{password}, #{role}, #{status}, NOW(), NOW())
    </insert>
    
    <!-- 更新用户 -->
    <update id="update">
        UPDATE user SET nickname=#{nickname}, email=#{email}, role=#{role},
        status=#{status}, update_time=NOW() WHERE id=#{id}
    </update>
    
    <!-- 更新密码 -->
    <update id="updatePassword">
        UPDATE user SET password=#{password}, update_time=NOW() WHERE id=#{id}
    </update>
    
    <!-- 删除用户 -->
    <delete id="deleteById">
        DELETE FROM user WHERE id=#{id}
    </delete>
    
    <!-- 统计超级管理员数量 -->
    <select id="countSuperAdmins" resultType="int">
        SELECT COUNT(*) FROM user WHERE role='SUPER_ADMIN'
    </select>
    
</mapper> 