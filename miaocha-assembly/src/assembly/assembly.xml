<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <!-- Main server JAR -->
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>com.hinadt.miaocha:miaocha-server</include>
            </includes>
            <outputFileNameMapping>miaocha-server.jar</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <!-- Server Dependencies -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <excludes>
                <exclude>com.hinadt.miaocha.log:miaocha-server</exclude>
                <exclude>com.hinadt.miaocha.log:miaocha-ui</exclude>
                <exclude>com.hinadt.miaocha.log:miaocha-assembly</exclude>
            </excludes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Version file -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>

        <!-- Configuration Files -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>version.txt</include>
                <include>banner.txt</include>
            </includes>
            <excludes>
                <exclude>*.properties</exclude>
                <exclude>*.yml</exclude>
                <exclude>*.xml</exclude>
            </excludes>
        </fileSet>

        <!-- Copy configuration from server module -->
        <fileSet>
            <directory>../miaocha-server/src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>**/*.yml</include>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>

        <!-- Scripts -->
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
                <include>lib/**</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
